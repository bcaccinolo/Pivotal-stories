#! /usr/bin/ruby

require "rubygems"
require "yaml"
require "pivotal-tracker"

PivotalTracker::Client.token('bc@billetto.dk', 'f1ghtclub')        # Automatically fetch API Token
PivotalTracker::Client.token = 'c18387a7f6dac7650c5a09ab042f239d'  # Manually set API Token

